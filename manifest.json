{
  "manifest_version": 3,
  "name": "Nudge",
  "version": "1.0",
  "description": "Mindful X usage tracking with real-time metrics and gentle reminders",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
